{
    "compilerOptions": {
        "jsx": "react",
        "outDir": "./build/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es5",
        "esModuleInterop": true,
        "allowJs": true
    },
    "include": ["src/*"],
    "exclude": [
        "node_modules/",
        "./node_modules",
        "./node_modules/*",
    ],
    "compileOnSave": false,
    "buildOnSave": false
}
